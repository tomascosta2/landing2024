---
import SocialPill from "./SocialPill.astro";
import NextJS from "./icons/NextJS.astro";
const Projects = [
	{
		title: 'Sistema de gestion de subastas',
		description: 'Desarrollo de un sistema de gestion de subastas de vehiculos para JMS Autos.',
		colaboration: 'Entropia',
		link: '#',
		github: '#',
		image: '/imgs/hertz-app-project-screenshot.webp',
		tags: [ 'NextJS', 'React', 'Tailwind CSS', 'Supabase' ]
	},
	{
		title: 'Sitio institucional',
		description: 'Desarrollo de un sitio institucional auto administrable en Wordpress para Medicentral',
		colaboration: 'Entropia',
		link: '#',
		github: '#',
		image: '/imgs/medicentral-project-screenshot.webp',
		tags: [ 'Wordpress', 'Divi' ]
	}
]

---

<div>
{
	Projects.map(({title, description, colaboration, link, github, image, tags}) => (
		<article class="group relative mb-6 transition rounded overflow-hidden hover:scale-[101%]">
			<img width="740px" height="416.25px" class="shadow-2xl shadow-white/8" src={image} alt="Captura de pantalla del proyecto" />
			<div class="bg-black group-hover:bg-opacity-75 p-[10px] md:p-[30px] md:pb-[50px] w-full absolute bottom-0 left-0 opacity-0 flex-col gap-3 group-hover:opacity-100 transition">
				<h3 class="text-xl md:text-3xl font-semibold text-yellow-200">{title}</h3>
				<p class="text-white/90 my-4">{description}</p>
				<p class="text-white/50 mb-4">En colaboraci√≥n con {colaboration}</p>
				{console.log(tags)}
				<nav class="flex flex-wrap gap-3">
					{ tags.map(tag => (
						<SocialPill class="text-xs md:text-base">{tag}</SocialPill>
					)) }
				</nav>
			</div>
		</article>
	))
}
</div>