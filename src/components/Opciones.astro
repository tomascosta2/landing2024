		title: 'Landing Page',
		checks: [
					"Diseño personalizado", 
					"10 secciones",
					"Formulario integrado",
					"Optimizado para SEO",
					"3 Reuniones de revisión",
				],
		rangeLow: '$120.000 ars',
		rangeHigh: '$160.000 ars',
		link: 'https://api.whatsapp.com/send?phone=542616841853&text=Hola%20Tom%C3%A1s!%20Quiero%20una%20landing%20page%20a%20medida%20para%20mi%20empresa%20%F0%9F%92%AA'
