	{
		img: 'https://assets-global.website-files.com/5b5729421aca332c60585f78/63f5fa23da820b87c87958be_61ba503872080311dde1ea56_long-form-landing-page-examples.png',
		title: 'eCommerce',
		checks: [
					"Diseño personalizado", 
					"6 páginas ademas de las basicas",
					"Formulario integrado",
					"Optimizado para SEO",
					"10 plugis a eleccion",
					"Hasta 50.000 productos",
					"Blog",
					"6 Reuniones de revisión",
				],
		rangeLow: '$350.000 ars',
		rangeHigh: '$450.000 ars',
		link: 'https://api.whatsapp.com/send?phone=542616841853&text=Hola%20Tom%C3%A1s!%20Quiero%20un%20eCommerce%20a%20medida%20para%20mi%20empresa%20%F0%9F%92%AA'
	},
	{
		img: 'https://assets-global.website-files.com/5b5729421aca332c60585f78/63f5fa23da820b87c87958be_61ba503872080311dde1ea56_long-form-landing-page-examples.png',
		title: 'Web Institucional',
		checks: [
					"Diseño personalizado", 
					"10 páginas",
					"Formulario integrado",
					"Optimizado para SEO",
					"10 plugis a eleccion",
					"Blog",
					"6 Reuniones de revisión",
				],
		rangeLow: '$250.000 ars',
		rangeHigh: '$350.000 ars',
		link: 'https://api.whatsapp.com/send?phone=542616841853&text=Hola%20Tom%C3%A1s!%20Quiero%20una%20web%20institucional%20a%20medida%20para%20mi%20empresa%20%F0%9F%92%AA'
	},
	{
		img: 'https://assets-global.website-files.com/5b5729421aca332c60585f78/63f5fa23da820b87c87958be_61ba503872080311dde1ea56_long-form-landing-page-examples.png',
		title: 'Sistema a medida',
		checks: [
					"Sin limite de reuniones",
				],
